{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES6",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,

        // 配置 alias @
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": [
        "src/**/*", "src/custom-object.d.ts"
    ]
}