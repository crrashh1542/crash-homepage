---
// 引入数据
import config from '../../config/config'

// 引入头像
import { Image } from "astro:assets"
import avatar from '../assets/images/avatar.jpg'
---

<div class="banner flex">
    <Image src={avatar} class="rounded-full h-56 w-56" alt="" />
    <div class="content pl-16">
        <div class="title mt-2 py-3 font-semibold text-transparent">{ config.site.name }</div>
        <div class="text-xl">{ config.site.description }</div>
    </div>
</div>

<style lang="less">
    @import url('../assets/styles/global.less');

    .banner {
        .title {
            font-size: 54px;
            background: linear-gradient(120deg, #fae773, #fab664);
            // Tailwind 中使用 background-clip 会因优先级低被挤占
            background-clip: text;
        }
    }
</style>